<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>

	<filter>
		<filter-name>setCharacterEncodingFilter</filter-name>
		<filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<async-supported>true</async-supported>
	</filter>
	<filter-mapping>
		<filter-name>setCharacterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>filter-doNothing</filter-name>
		<filter-class>filter.DoNothing</filter-class>
		<init-param>
			<param-name>name</param-name>
			<param-value>동기</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>filter-doNothing</filter-name>
		<url-pattern>/*</url-pattern> <!-- 특정 url 패턴에 필터 적용 : 모든 웹컴포넌트 -->
		<!--<url-pattern>*.jsp</url-pattern> 계층적인 URL 경로와 *.ext를 함께 쓸 수는 없음 -->
		<!--<servlet-name>servlet-hello1</servlet-name> 특정 서블릿에 필터 적용 -->
	</filter-mapping>



	<servlet>
		<servlet-name>servlet-hello1</servlet-name>
		<servlet-class>servlet.Hello1</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>servlet-hello1</servlet-name>
		<url-pattern>/hello1</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>LifeCycle</servlet-name>
		<display-name>LifeCycle</display-name>
		<description></description>
		<servlet-class>servlet.LifeCycle</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LifeCycle</servlet-name>
		<url-pattern>/lifeCycle</url-pattern>
	</servlet-mapping>



	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
