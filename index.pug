    h1.marker 최근 수정된 포스트
    ul#recently-changed-posts
    script.
        let changedPosts = []
        let notDeletedPosts = new Set()
        for (let line of recentChangedPosts.split('\n').reverse()) {
            let parts = line.split('\t')
            if (parts.length != 2)
                continue
            changedPosts.push(parts[1])
            switch (parts[0]) {
                case 'D':
                    notDeletedPosts.delete(parts[1])
                    break
                case 'A':
                case 'M':
                    notDeletedPosts.add(parts[1])
                    break
            }
        }
        let renderedCount = 0
        for (let post of changedPosts.reverse()) {
            if (notDeletedPosts.has(post)) {
                notDeletedPosts.delete(post)
                let url = '/' + post
                let registeredPosts = posts.list.filter(o => o.file == url)
                if (registeredPosts.length == 0)
                    continue
                document.getElementById('recently-changed-posts').appendChild(`<li><a href="${url}">${registeredPosts[0].title}</a></li>`.asSF().$)
                if (renderedCount++ > 15)
                    break
            }
        }

