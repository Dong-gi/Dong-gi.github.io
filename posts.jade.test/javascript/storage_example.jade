        input#cookieValue485(type='text', placeholder='쿠키 값')
        input#millis485(type='text', placeholder='유효 기간(ms)')
        button(onclick="setCookie($('#cookieName485').val(), $('#cookieValue485').val(), $('#millis485').val())") 쿠키 생성
        button(onclick="setCookie($('#cookieName485').val(), null, -1)") 쿠키 제거
        button(onclick="alert(getCookie($('#cookieName485').val()))") 쿠키 확인
        button(onclick='alert(document.cookie)') 전체 쿠키
        script.
            function setCookie(key, value, millis) {
            let expires = new Date();
            expires.setTime(new Date().getTime() + Number.parseInt(millis));
            document.cookie = key + "=" + value + ";expires=" + expires.toUTCString() + ";path=/";
            }
            function getCookie(key) {
            let regex = new RegExp(key + '=(.*);?', 'gm');
            let value = document.cookie.match(regex);
            if(!!value) {
            return value['0'].replace(regex, '$1');
            }
            }
