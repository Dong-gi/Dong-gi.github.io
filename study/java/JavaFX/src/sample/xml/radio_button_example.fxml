<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <fx:define>
            <ToggleGroup fx:id="group"/>
        </fx:define>
        <RadioButton fx:id="radioButtonExample_bold" toggleGroup="$group" alignment="CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Bold" />
        <RadioButton fx:id="radioButtonExample_italic" toggleGroup="$group" alignment="CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Italic" GridPane.columnIndex="1" />
        <TextField fx:id="radioButtonExample_text" alignment="CENTER" maxWidth="1.7976931348623157E308" text="Hello World!" GridPane.columnSpan="2" GridPane.rowIndex="1" />
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</GridPane>
