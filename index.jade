            td 2018-02-06
            td.hover-content(template-id='template-index-1') 직업능력개발훈련교사 자격증 취득
        +tds('2017-11-24', '정보처리기사 취득')
        +tds('1995', '응애')

    h2.marker 주요 포스트
    table
        +ths('내용', '링크')
        tr
            td SF; Simplest html Framework
            td: +asA('/posts/project/sf.html')
        tr
            td 오류 대응 목록
            td: +asA('/posts/project/error.html')
        tr
            td 브라우저 매크로 등 코드 스니펫
            td: +asA('/posts/project/snippets.html')
        tr
            td WPF 데이터 툴
            td: +asA('/posts/project/wpf_data_tool.html')
        tr
            td java.base 모듈
            td: +asA('/posts/java/java.base.html')
        tr
            td 선형 대수
            td: +asA('/posts/algorithm/linear_algebra.html')
        tr
            td Raspberry Pi 3 + OpenCV(python)
            td: +asA('/posts/single/rpi.html')


