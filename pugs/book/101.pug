    h1 도서 정보
    .w3-row
        .w3-col.s2.w3-center
            +w3img('https://contents.kyobobook.co.kr/sih/fit-in/400x0/pdt/9788990982360.jpg', '도서 이미지')&attributes({style: 'max-height:210px'})
